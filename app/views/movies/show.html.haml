%h1= @movie.title
.jumbotron
  .pdp
    %img.img-rounded.img-plp{ src: @movie.avatar }

    .description-container
      .description
        = @movie.description
      %span= I18n.t('rating') + ': ' + @movie.rating.to_s
      - if user_signed_in?
        .btn-margin-top
          = link_to 'Email me details about this movie', send_info_movie_path(@movie.id), class: 'btn btn-sm btn-default'
